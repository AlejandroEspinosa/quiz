<table><% var i; for (i=0; i < quizes.length; i++) { %>
          <tr>
            <td><%= quizes[i].tema.replace(/\w+/, function(a){ return a.charAt(0).toUpperCase() + a.slice(1).toLowerCase(); }) // Primera letra en mayúsculas %>: </td>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td><% if (session.user){ %>
            <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
            <td>
              <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                <button type="submit" onClick="return confirm('¿Borrar: <%= quizes[i].pregunta %>?');">borrar</button>
              </form>
            </td><% } %>
          </tr><% } %>
        </table>
        <form method="get" action="/quizes">
          Buscar preguntas con el siguiente texto:<br />
          <input type="text" name="search" />
          <input type="submit" value="Buscar" />
		</form><br /><% if (session.user){ %>
		<a href="/quizes/new"><button type="button">Crear pregunta</button></a><% } %>